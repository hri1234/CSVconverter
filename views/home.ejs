<!-- uploading csv file in a database -->
<main>
    <div id="center" >
        <h1 class="text-center text-white bg-maroon" style="border:2px solid black; background-color:#E5322D; border-radius:25px;  box-shadow: 1px 2px 1px 2px black; width: 60%; margin: auto; position: relative; bottom: 20px;">CSV File Read</h1>
        <p style="width: 50%; text-align: center; margin: auto; font-style: italic; position: relative; top: 5px; font-weight: 600;">Hello, this would be valuable time to upload the files . in this website you can upload file through csv . and get all the data . so you can filter all the data by simple search.</p>
        <div class="mb-3">
            <form  action="/upload/create" method="post" enctype="multipart/form-data" style="position: relative; top: 5px;">
                <!-- only show csv file -->
                <input class="form-control w-50 mx-auto mt-3" type="file" name="file" id="formFile" accept=".csv">
                <div class="d-grid gap-7 col-2 mx-auto mt-3" style="position: relative; top: 18px;">
                    <input class="btn btn-light bg-red" style="border-radius: 12px; background-color: red; border: 2px solid black; font-weight: 700; box-shadow: 1px 2px 1px 2px black; color: white;" type="submit" value="Upload">
                </div>
            </form>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-6 mx-auto h-100 my-5">
                <!-- showing a list items of csv file  -->
                <%for(i of file){%>
                    <div class="row my-2 border bg-dark bg-gradient p-2 fs-4">
                        <div class="col-10"><a href="/upload/<%= i.file %>"
                                class="text-decoration-none text-capitalize text-light">
                                <%= i.originalName %>
                            </a> </div>
                        <div class="col-2"><a href="/delete/<%= i.file %>" class="text-decoration-none text-light">
                            <i class="fa fa-trash-o"></i></a>
                        </div>
                    </div>
                <%}%>
            </div>
        </div>
    </div>
</main>